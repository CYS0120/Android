<script type="text/javascript">
	function req_sms() {
		var mobile = $("#nm_m1").val()+$.trim($("#nm_m2").val())+$.trim($("#nm_m3").val());

		if(mobile == "" || !(mobile.length == 10 || mobile.length == 11)) {
			showAlertMsg({msg:"휴대폰 번호를 확인하세요."});
			return;
		}

		if( !($("#nm_policy").is(":checked") && $("#nm_privacy").is(":checked"))  ) {
			showAlertMsg({msg:"필수항목에 동의하셔야 합니다."});
			return;
		}

		$.ajax({
			method: "post",
			url: "/api/ajax/req_sms.asp",
			data: { mobile: mobile },
			dataType: "json",
			success: function(res) {
				showAlertMsg({msg:res.message});

				if(res.result == 0) {
					$("#nm_num").val(res.num);
				}
			}
		});
	}

	function chk_sms() {
		var mobile = $("#nm_m1").val()+$.trim($("#nm_m2").val())+$.trim($("#nm_m3").val());

		if(mobile == "" || !(mobile.length == 10 || mobile.length == 11)) {
			showAlertMsg({msg:"휴대폰 번호를 확인하세요."});
			return false;
		}

		var app_num = $.trim($("#nm_num").val());

		if (app_num == "" || app_num.length != 6) {
			showAlertMsg({msg:"인증번호를 확인하세요."});
			return false;
		}

		$.ajax({
			method: "post",
			url: "/api/ajax/chk_sms.asp",
			data: {mobile: mobile, app_num: app_num},
			dataType: "json",
			success: function(res) {
				showAlertMsg({msg:res.message, ok: function(){
					if(res.ChkCode == "C") {
						var f = document.ckmobile;
						f.cmobile.value=mobile;
						f.submit();
					}
				}})
			}
		});
	}

	//다시조회
	function sms_reset() {
		$("#cmobilecheck").val("Y");
		document.ckmobile.submit()
	}
</script>


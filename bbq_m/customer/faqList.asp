<script>
	jQuery(document).ready(function(e) {
		// inquiryList
		$(document).on('click', '.section_faqWrap .question', function(e) {
			var par = $(this).closest('.box');
			if(par.hasClass('active')){
				par.removeClass('active').find('.answer').stop().slideUp('fast');
			}else{
				par.addClass('active').find('.answer').stop().slideDown('fast');
				par.siblings().removeClass('active').find('.answer').stop().slideUp('fast');
			}
		});
	});

	function faq_reset()
	{
		document.getElementById("list_src").value = "";
		document.getElementById("list_type").value = "";

		list_search();
	}

	var faq_title_arr = new Array();
	var faq_content_arr = new Array();

	function list_search()
	{
		var list_type = document.getElementById("list_type").value;
		var obj = document.getElementById("list_src");
		var val = obj.value;
		var cnt = 0;
		var show_faq_arr = new Array(); // 보여질div숫자

		$('.box').hide(0).removeClass('active').find('.answer').stop().slideUp('fast'); // 모든 카테고리 close

		if (list_type == "" || list_type == "title")
		{
			for (i=0; i<faq_title_arr.length; i++)
			{
				if (faq_title_arr[i].replace(/ /gi, "").indexOf(val.replace(/ /gi, "")) > -1) {
					show_faq_arr.push((i+1));
					cnt++;
				}
			}
		}

		if (list_type == "" || list_type == "content")
		{
			for (i=0; i<faq_content_arr.length; i++)
			{
				if (faq_content_arr[i].replace(/ /gi, "").indexOf(val.replace(/ /gi, "")) > -1) {
					show_faq_arr.push((i+1));
					cnt++;
				}
			}
		}

		for (i=0; i<show_faq_arr.length; i++)
		{
			$('#faq_list_'+ show_faq_arr[i]).show(0); // 검색된 카테고리 open
		}

		if (cnt > 0 && val != "") {
			$('#all_div').show(0);
		} else {
			$('#all_div').hide(0);
		}
	}

</script>

